{
    "swagger": "2.0",
    "info": {
        "description": "For trials",
        "title": "AuthApi",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8000",
    "basePath": "/",
    "paths": {
        "/api/login": {
            "post": {
                "description": "exchange UUID for access and refresh token pair",
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "api"
                ],
                "summary": "Login handler",
                "parameters": [
                    {
                        "description": "user uuid",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.User"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/dto.TokenPair"
                        }
                    },
                    "422": {
                        "description": "body is unprocessable",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "description": "logout via access token, i.e. remove refresh token entry from db",
                "tags": [
                    "api"
                ],
                "summary": "Logout handler",
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/me": {
            "get": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "description": "get user by his access token",
                "tags": [
                    "api"
                ],
                "summary": "Me handler",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.User"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/refresh": {
            "post": {
                "description": "exchange refresh token for access and refresh token pair. if ip differs from initial, webhook request issued",
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "api"
                ],
                "summary": "Refresh handler",
                "parameters": [
                    {
                        "description": "request with refresh token",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.RefreshRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/dto.TokenPair"
                        }
                    },
                    "403": {
                        "description": "token is used, expired, or User-Agent is different",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "409": {
                        "description": "wrong format of refresh token",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "422": {
                        "description": "body is unprocessable",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.RefreshRequest": {
            "type": "object",
            "properties": {
                "refresh_token": {
                    "type": "string"
                }
            }
        },
        "dto.TokenPair": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                },
                "lifetime": {
                    "type": "integer"
                },
                "refresh_token": {
                    "type": "string"
                }
            }
        },
        "dto.User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "Bearer": {
            "description": "Paste token with Bearer prefix, e.g. `Bearer \u003cyour-token\u003e`",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}